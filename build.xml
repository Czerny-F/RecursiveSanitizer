<?xml version='1.0' encoding='UTF-8'?>
<project name="RecursiveSanitizer" default="build">
  <property name="baseDir" value="." override="true" />
  <autoloader autoloaderpath="${baseDir}/vendor/autoload.php" />
  <php expression="include('${baseDir}/vendor/autoload.php')" />
  <target name="phpunit">
    <phpunit pharlocation="${baseDir}/vendor/bin/phpunit"></phpunit>
  </target>
  <target name="build" depends="phpunit" />
</project>
